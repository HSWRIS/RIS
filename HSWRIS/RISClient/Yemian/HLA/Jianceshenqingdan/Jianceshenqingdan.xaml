<kongjian:Jichuyemian x:Class="RISClient.Yemian.HLA.Jianceshenqingdan.Jianceshenqingdan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:kongjian="clr-namespace:RISClient.Kongjian"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RISClient.Yemian.HLA"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1300"
      Title="Jianceshenqingdan">

    <StackPanel>
        <Label x:Name="label" Content="检测申请单" FontSize="20"/>
        <Grid Height="3">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <LinearGradientBrush.RelativeTransform>
                        <TransformGroup>
                            <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                            <SkewTransform CenterY="0.5" CenterX="0.5"/>
                            <RotateTransform Angle="-90" CenterY="0.5" CenterX="0.5"/>
                            <TranslateTransform/>
                        </TransformGroup>
                    </LinearGradientBrush.RelativeTransform>
                    <GradientStop Color="#FF005DFF" Offset="0"/>
                    <GradientStop Color="White" Offset="1"/>
                    <GradientStop Color="#FFCFE1FF" Offset="0.1"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>
        <Label x:Name="label2" Content="---- 申请单列表 ----" FontSize="15" Margin="0,10,0,0"/>
        <Grid Height="100">
            <Label x:Name="label1" Content="查询部分" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
        </Grid>
        <DataGrid x:Name="dataGrid" MinHeight="200">
            <DataGrid.Columns>
                <DataGridTextColumn Header="编号"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid >
            <Button x:Name="button" Content="详细信息" HorizontalAlignment="Left" VerticalAlignment="Top" />
            <kongjian:Liebiaokongzhi x:Name="shenqingdanliebiaokongzhiUI" Tianjia_Click="shenqingdanliebiaokongzhiUI_Tianjia_Click" Shanchu_Click="shenqingdanliebiaokongzhiUI_Shanchu_Click" Xiugai_Click="shenqingdanliebiaokongzhiUI_Xiugai_Click" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        </Grid>

    </StackPanel>
</kongjian:Jichuyemian>
